{
  "name": "@dhis2/d2-ui-period-picker",
  "description": "Period picker component for DHIS2 in d2-ui",
  "main": "./index.js",
  "module": "./index.js",
  "license": "BSD-3-Clause",
  "author": "Hendrik de Graaf <hendrik@dhis2.org>",
  "scripts": {
    "prebuild": "npm run lint && rimraf ./build/*",
    "build": "npm run localize && babel src --copy-files --out-dir build --ignore spec.js",
    "lint": "eslint src/",
    "watch": "npm run build -- --watch",
    "test-ci": "jest --config=../../jest.config.js packages/file-menu",
    "extract-pot": "d2-i18n-extract -p src/ -o i18n/",
    "prettify": "prettier \"src/**/*.{js,jsx,json,css}\" --write",
    "localize": "npm run extract-pot && d2-i18n-generate -n d2-ui-file-menu -p ./i18n/ -o ./src/locales/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhis2/d2-ui.git"
  },
  "dependencies": {
    "@dhis2/d2-i18n": "^1.0.3",
    "d2": "^31.7.0",
    "@material-ui/core": "^3.3.1"
  },
  "devDependencies": {
    "@dhis2/d2-i18n-extract": "^1.0.6",
    "@dhis2/d2-i18n-generate": "^1.0.18",
    "husky": "^1.0.0-rc.4",
    "prettier": "^1.12.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run extract-pot && npm run prettify && git add ./i18n"
    }
  },
  "peerDependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "prop-types": "^15.6.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "version": "5.3.4",
  "private": false
}
